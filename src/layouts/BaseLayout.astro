---
export interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Explorador dels plens del Consell Municipal de Barcelona",
} = Astro.props;
---

<!doctype html>
<html lang="ca">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} ‚Äî plens.barcelona</title>
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL}favicon.svg`}
    />
  </head>
  <body>
    <header class="site-header">
      <div class="container site-header__inner">
        <a href={import.meta.env.BASE_URL} class="site-header__logo">
          <span class="site-header__logo-icon">üèõÔ∏è</span>
          <span class="site-header__logo-text">plens.barcelona</span>
        </a>
        <nav class="site-nav" aria-label="Navegaci√≥ principal">
          <a href={`${import.meta.env.BASE_URL}sessions/`}>Sessions</a>
          <a href={`${import.meta.env.BASE_URL}regidors/`}>Regidors</a>
          <a href={`${import.meta.env.BASE_URL}temes/`}>Temes</a>
          <a href={`${import.meta.env.BASE_URL}retorica/`}>Ret√≤rica</a>
          <a href={`${import.meta.env.BASE_URL}intervencions/`}>Cercador</a>
        </nav>
      </div>
    </header>

    <main class="container main-content">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container site-footer__inner">
        <p>plens.barcelona ‚Äî Dades obertes dels plens del Consell Municipal</p>
        <p class="site-footer__links">
          <a href={`${import.meta.env.BASE_URL}about/`}>Sobre el projecte</a>
        </p>
      </div>
    </footer>

    <style is:global>
      @import "../styles/global.css";

      .site-header {
        position: sticky;
        top: 0;
        z-index: 100;
        background: var(--c-bg);
        border-bottom: 2px solid var(--c-accent);
        height: var(--header-height);
      }
      .site-header__inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 100%;
      }
      .site-header__logo {
        display: flex;
        align-items: center;
        gap: var(--s-sm);
        color: var(--c-text);
        font-weight: 700;
        font-size: var(--fs-lg);
      }
      .site-header__logo:hover {
        color: var(--c-accent);
      }
      .site-header__logo-icon {
        font-size: 1.5rem;
      }

      .site-nav {
        display: flex;
        gap: var(--s-lg);
      }
      .site-nav a {
        color: var(--c-text);
        font-weight: 500;
        font-size: var(--fs-sm);
        padding: var(--s-xs) 0;
        border-bottom: 2px solid transparent;
        transition: border-color 0.15s;
      }
      .site-nav a:hover {
        color: var(--c-accent);
        border-bottom-color: var(--c-accent);
      }

      .main-content {
        min-height: calc(100vh - var(--header-height) - 120px);
        padding-top: var(--s-lg);
        padding-bottom: var(--s-2xl);
      }

      .site-footer {
        background: var(--c-bg-alt);
        border-top: 1px solid var(--c-border);
        padding: var(--s-xl) 0;
      }
      .site-footer__inner {
        text-align: center;
        font-size: var(--fs-sm);
        color: var(--c-text-muted);
      }
      .site-footer__links {
        margin-top: var(--s-sm);
      }
      .site-footer__links a {
        color: var(--c-accent);
      }

      @media (max-width: 768px) {
        .site-nav {
          gap: var(--s-md);
        }
        .site-nav a {
          font-size: var(--fs-xs);
        }
        .site-header__logo-text {
          font-size: var(--fs-base);
        }
      }
    </style>
  </body>
</html>
